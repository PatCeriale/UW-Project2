<section class="section">
    <div class="columns is-centered is-multiline is-flex-wrap-wrap" style="padding: 2rem">
        {{#each beer}}
        <div class="column is-one-third">
            <div class="card">
                <div class="card-image">
                    <figure class="image is-square">
                        <img src="{{this.image}}" alt="Placeholder image">
                    </figure>
                </div>
                <div class="card-content">
                    <div class="media">
                        <div class="media-content">
                            <p class="title is-4"><a href="/beers/{{this.id}}">{{this.name}}</a></p>
                            <p class="subtitle is-6"><a href="/styles/{{this.Style.id}}">{{this.Style.name}}</a></p>
                        </div>
                    </div>
                    <div class="content">
                        <p>AHAB: {{this.Ratings.length}} ABV: {{this.abv}} IBU: {{this.ibu}}</p>
                    </div>
                    <footer class="card-footer">
                        <button class="add-six-pack card-footer-item button is-black is-medium is-fullwidth"
                            value={{this.id}}>Add
                            To Six Pack</Button>
                    </footer>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</section>
<script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
<script src="/js/addbeersixpack.js"></script>
