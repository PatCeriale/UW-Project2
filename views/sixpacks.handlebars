<section class="section">
    <div class="columns">
        <div class="column is-1">
        </div>
        <div class="column is-10 ml-2">
            <div class="columns">
                <div class="column is-8">
                    <h1 class="title">Hey {{user.user_name}}, here are all your six packs</h1>
                </div>
                <div class="column">
                    <form action="/sixpacks" method="post">
                        <div class="field is-fullwidth has-addons">
                            <div class="control">
                                <input class="input" name="name" type="text" placeholder="New Six Pack Name">
                            </div>
                            <div class="control">
                                <button class="button is-block is-black" type="submit">Create Six Pack</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            {{#each sixpack}}
            <article class="media">
                <div class="media-content">
                    <div class="content">
                        <h2 class="title is-4"><a href="/user/sixpacks/{{this.id}}">{{this.name}}</a></h2>
                    </div>
                </div>
                <div class="media-right">
                </div>
            </article>
            {{/each}}
        </div>
    </div>
</section>