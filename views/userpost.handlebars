<section class="section">
  <div class="container">
    <div class="columns">
      <div class="column"></div>
      <div class="column box is-two-fifths register">
        <form action="/userpost" method="post">
        <div class="field">
            <div class="control">
              <label><p class="title is-3">{{user.user_name}}</p></label>
              <input class="input is-medium" name="user_name" type="hidden"  value={{user.user_name}}>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <label>Title</label>
              <input class="input is-medium" name="title" type="text" placeholder="Title">
            </div>
          </div>
          <div class="field">
            <div class="control">
              <label>Description</label>
              <textarea class="is-medium textarea" name="description" rows="3" maxlength="150"
                placeholder="Description - limit 150 characters"></textarea>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <label>Beer</label>
              <input class="input is-medium" name="beer_name" type="text" placeholder="Beer Name">
            </div>
          </div>
          <div class="field">
            <div class="control">
              <label>Brewery</label>
              <input class="input is-medium" name="brewery_name" type="text" placeholder="Brewery Name">
            </div>
          </div>
          <div>
            <span id="upload_widget" class="button is-black is-fullwidth">Upload Image</span>
          </div>
          <div class="field">
            <div class="control">
              <label>Image</label>
              <input class="input is-medium" name="image" type="text" id="url_text">
            </div>
          </div>
          <button class="button is-block is-black is-fullwidth is-medium" type="submit">Post</button>
        </form>
      </div>

      <div class="column"></div>
    </div>
  </div>
  </div>
</section>
<script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
<script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript"></script>
<script src="/js/userpost.js"></script>